{% macro setBorderClass(vertical, horizontal) %}
    {% set class = '' %}
    {% if horizontal == 4 or horizontal == 7 %}
        {% set class = class ~ 'horizontal-strong ' %}
    {% endif %}
    {% if vertical == 4 or vertical == 7 %}
        {% set class = class ~ 'vertical-strong ' %}
    {% endif %}
    {{ class }}
{% endmacro %}